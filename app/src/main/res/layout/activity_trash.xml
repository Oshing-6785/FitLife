<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarTrash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:title="@string/trash_title"
        app:titleCentered="true"
        app:navigationIcon="@android:drawable/ic_media_previous"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Filter chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTrash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarTrash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTrashAll"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checked="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTrashRoutines"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routines"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTrashExercises"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercises"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTrashChecklist"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checklist"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- Empty state container -->
    <LinearLayout
        android:id="@+id/emptyContainerTrash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroupTrash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivTrashEmpty"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="@string/trash_empty"
            android:alpha="0.75"
            android:src="@android:drawable/ic_menu_delete"/>

        <TextView
            android:id="@+id/tvEmptyTrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trash_empty"
            android:layout_marginTop="12dp"
            android:gravity="center"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvTrash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:paddingTop="6dp"
        android:paddingBottom="12dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/chipGroupTrash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
