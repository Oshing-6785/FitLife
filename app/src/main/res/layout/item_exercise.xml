<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    app:cardElevation="1dp"
    app:strokeColor="#EEEEEE"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- NEW thumbnail -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivExerciseThumb"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            android:contentDescription="Exercise thumbnail"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Push Ups"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/ivExerciseThumb"
            app:layout_constraintEnd_toStartOf="@id/tvExerciseDoneBadge"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvExerciseDoneBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_done_badge"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvExerciseMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sets: 3   Reps: 12"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvExerciseName"
            app:layout_constraintStart_toStartOf="@id/tvExerciseName"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
